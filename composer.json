{
    "name": "trimethylpentan/news-articles-backend",
    "description": "Bewerbungsaufgabe Heise Webentwicklung Teil 1",
    "authors": [
        {
            "name": "Pascal Fischer",
            "email": "pascal@p-fischer.eu"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-mbstring": "*",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/http": "^1.2",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.10",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Trimethylpentan\\NewsArticles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trimethylpentan\\NewsArticles\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpdbg -qrr vendor/bin/phpunit --config phpunit.xml"
    }
}
